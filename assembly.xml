<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>release</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>./conf</outputDirectory>
            <includes>
                <include>application.properties</include>
                <include>application-test.properties</include>
                <include>application-provided.properties</include>
            </includes>
            <fileMode>0755</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/so</directory>
            <outputDirectory>./so</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>0755</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/lib</directory>
            <outputDirectory>./lib</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>0755</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/dll</directory>
            <outputDirectory>./dll</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>0755</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/src/main/resources/bin</directory>
            <outputDirectory>./bin</outputDirectory>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>


        <!--拷贝前一插件打包后的all-in-one的jar文件-->
        <fileSet>
            <directory>${project.basedir}/target/</directory>
            <outputDirectory>./lib</outputDirectory>
            <includes>
                <include>${project.artifactId}-${project.version}.jar</include>
            </includes>
            <fileMode>0755</fileMode>
            <directoryMode>0777</directoryMode>
        </fileSet>

    </fileSets>

</assembly>